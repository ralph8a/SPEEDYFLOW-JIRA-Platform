}

.panel-comment-author {
  font-weight: 600;
  color: var(--text-primary, #000);
  margin-bottom: 4px;
}

.panel-comment-text {
  color: var(--text-secondary, #666);
}

.panel-comment-time {
  font-size: 11px;
  color: var(--text-tertiary, #999);
  margin-top: 4px;
}

/* Loading state */
.panel-content.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 200px;
}

.loading-spinner {
  text-align: center;
  color: var(--text-secondary, #666);
}

