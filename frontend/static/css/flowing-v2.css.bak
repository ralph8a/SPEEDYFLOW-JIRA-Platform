/* Flowing V2 - Core stylesheet (backup)
   Purpose: lightweight, scoped styles for the Flowing V2 balanced/footer UI.
   Backup of frontend/static/css/flowing-v2.css
*/
:root{
  --flowing-bg: rgba(255,255,255,0.86);
  --flowing-accent: #2f7bf7;
  --flowing-muted: #6b7280;
  --flowing-border: rgba(7,12,20,0.06);
  --flowing-radius: 10px;
  --flowing-gap: 12px;
}

#balancedContentContainer, .flowing-v2-root {
  display: flex;
  gap: var(--flowing-gap);
  align-items: flex-start;
  width: 100%;
  box-sizing: border-box;
  padding: 12px;
}

.left-section {
  flex: 1 1 0;
  min-width: 320px;
  background: var(--flowing-bg);
  border-radius: var(--flowing-radius);
  padding: 12px;
  box-shadow: 0 6px 18px rgba(16,24,40,0.06);
  border: 1px solid var(--flowing-border);
}

.right-section {
  width: 360px;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.flowing-header, #flowingHeader {
  margin-bottom: 8px;
  font-weight: 600;
  color: #0f172a;
}

.comments-section {
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.comments-section .comments-list {
  overflow: auto;
  padding-right: 6px;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.comment-composer {
  border-top: 1px solid var(--flowing-border);
  padding-top: 8px;
  margin-top: 8px;
}

.comments-section .comments-list::-webkit-scrollbar { width: 10px; height: 10px; }
.comments-section .comments-list::-webkit-scrollbar-thumb { background: linear-gradient(180deg, rgba(0,0,0,0.12), rgba(0,0,0,0.06)); border-radius: 8px; }

#attachmentsListRight, #attachmentsListFooter, #attachmentsListHeader {
  display: block;
  width: 100%;
  box-sizing: border-box;
}

.attachments-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(88px, 1fr));
  gap: 8px;
  align-items: start;
}

.attachment-thumb {
  width: 100%;
  height: 88px;
  object-fit: cover;
  border-radius: 8px;
  background: linear-gradient(180deg, #f8fafc, #ffffff);
  border: 1px solid var(--flowing-border);
}

.attachments-full {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.custom-fields {
  display: flex;
  flex-direction: column;
  gap: 6px;
  max-height: 124px;
  overflow: hidden;
  transition: max-height 0.22s ease;
}
.custom-fields.expanded { max-height: 640px; overflow: auto; }
.show-all-fields {
  color: var(--flowing-accent);
  cursor: pointer;
  font-size: 0.94rem;
  margin-top: 6px;
  align-self: flex-start;
}

.flowing-btn {
  background: var(--flowing-accent);
  color: #fff;
  padding: 6px 10px;
  border-radius: 8px;
  border: none;
  cursor: pointer;
  font-weight: 600;
  font-size: 0.9rem;
  box-shadow: 0 2px 6px rgba(47,123,247,0.12);
}
.flowing-btn.secondary { background: transparent; color: var(--flowing-accent); border: 1px solid rgba(47,123,247,0.12); }

.flowing-footer, #flowingFooter {
  width: 100%;
  margin-top: 12px;
  display: flex;
  justify-content: space-between;
  gap: 12px;
  align-items: center;
}

@media (max-width: 960px) {
  #balancedContentContainer { flex-direction: column; padding: 8px; }
  .right-section { width: 100%; order: 2; }
  .left-section { order: 1; width: 100%; }
}

.visually-hidden { position: absolute !important; height: 1px; width: 1px; overflow: hidden; clip: rect(1px,1px,1px,1px); white-space: nowrap; }

.flowing-v2-root * { box-sizing: border-box; }

.mv-8 { margin-top: 8px; margin-bottom: 8px; }
.pv-8 { padding: 8px; }

.card-action-btn {
  position: absolute;
  top: 8px;
  right: 8px;
  z-index: 5;
  background: rgba(255,255,255,0.88);
  border-radius: 6px;
  border: 1px solid var(--flowing-border);
  padding: 6px;
  cursor: pointer;
}

.flowing-banner {
  background: rgba(255,255,255,0.5);
  backdrop-filter: blur(6px);
  border-radius: 10px;
  padding: 10px;
  border: 1px solid rgba(255,255,255,0.4);
}
