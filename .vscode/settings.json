{
  // Use the project's virtualenv Python as the default interpreter
  "python.defaultInterpreterPath": "${workspaceFolder}//.venv3.12/Scripts/python.exe",
  // Ensure the Python extension activates the environment automatically in terminals
  "python.terminal.activateEnvironment": true,
  // Add venv Scripts to integrated terminal PATH so new terminals default to the venv
  "terminal.integrated.env.windows": {
    "VIRTUAL_ENV": "${workspaceFolder}//.venv3.12",
    "PATH": "${workspaceFolder}//.venv3.12\\Scripts;${env:PATH}"
  },
  // Keep existing non-Python workspace settings
  "javascript.validate.enable": false,
  "eslint.enable": false,
  // Legacy setting (kept for compatibility) â€” overridden by python.defaultInterpreterPath
  "python.pythonPath": "C:\\ProgramData\\anaconda3\\python.exe"
}
